<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <extensions>
    <add assembly="NLog.Elmah"/>
  </extensions>
  <targets>
    <!-- add your targets here -->
    <target xsi:type="Elmah"
            name="elmahWithLogLevelAsType"
            layout="${longdate} ${uppercase:${level}} ${message}"
            LogLevelAsType="true"/>
    
  <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log"
   layout="${longdate} ${logger} ${uppercase:${level}} ${message} ${exception:format=ToString,StackTrace,method:maxInnerExceptionLevel=5:innerFormat=ToString}" />
 </targets>
 <rules>
  <logger name="*" minlevel="Trace" writeTo="f" />
   <logger name="*" minlevel="Trace" writeTo="elmahWithLogLevelAsType" />
 </rules>
</nlog>